                                <Viewbox.RenderTransform>
                                    <ScaleTransform x:Name="CircleButtonRenderTransform" ScaleX="1.0" ScaleY="1.0"/>
                                </Viewbox.RenderTransform>
                                <Viewbox.RenderTransformOrigin>
                                    <Point X="0.5" Y="0.5"/>
